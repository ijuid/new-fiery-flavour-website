<%- include("header") -%>
<br />
<h1 style="text-align: center; font-size: 9vw">New Table Reservation</h1>
<div style="padding: 5vw; background-color: #0c0c0c; border: 0.4vw solid grey">
  <form class="contact-form">
    <label for="fname">Full name:</label><br />
    <input
      class="contact-form"
      type="text"
      id="fname"
      name="fname"
      required
    /><br />
    <label for="size">Party Size:</label><br />
    <input
      class="contact-form"
      type="number"
      id="size"
      name="size"
      min="1"
      max="6"
      required
    />
    <br />
    <label for="date">Date & time of your reservation :</label><br />
    <input
      class="contact-form"
      type="datetime-local"
      id="date"
      name="date"
      min="<%= new Date().toISOString().split('T')[0] %>"
      required
    /><br />
    <br />
    <label style for="contactNum">Your Contact number:</label><br />
    <input
      class="contact-form"
      type="tel"
      id="contactNum"
      name="contactNum"
      required
    /><br />
    <label style for="email">Enter your email:</label><br />
    <input
      class="contact-form"
      type="email"
      id="email"
      name="email"
      required
    /><br /><br />
    <input
      class="booking-button"
      style="padding: 2vw 8vw"
      type="submit"
      value="Submit"
    />
  </form>
</div>

<%-include("footer") -%>

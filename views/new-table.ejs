<%- include("header") -%>

<% if (typeof invalid !== 'undefined' && invalid) { %>
    <div class="alert">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        <%= invalid %>
    </div>
<% } %>


<div class="container" style="background-color: black; padding-bottom: 37vh">
    <img src="flame.jpg" alt="fire" class="flame-img">
<!-- main reservation form container -->
<div class="table">
    <h1 style="font-size: 5vw">New Table Reservation</h1>
  <!-- reservation form -->
  <form action="/register" method="POST" class="table-form">
    <!-- full name input -->
    <label for="fname">Full name:</label><br />
    <input
      class="table-form"
      type="text"
      id="fname"
      name="fname"
      required
    /><br />

    <!-- party size input (min 1, max 6) -->
    <label for="size">Party Size:</label><br />
    <input
      class="table-form"
      type="number"
      id="size"
      name="size"
      min="1"
      max="6"
      required
    />
    <br />

    <!-- date input (minimum date set to today using EJS) -->
    <label for="date">Date of your reservation :</label><br />
    <input
      class="table-form"
      type="date"
      id="date"
      name="date"
      min="<%= new Date().toISOString().split('T')[0] %>"
      required
    /><br />

    <!-- dropdown for selecting time slots -->
    <label for="time">Time of your reservation :</label><br />
    <select name="time" id="time" class="table-form">
      <option>15:00</option>
      <option>16:00</option>
      <option>17:00</option>
      <option>18:00</option>
      <option>19:00</option>
      <option>20:00</option>
      <option>21:00</option>
      <option>22:00</option>
    </select>
    <br />

    <!-- contact number input -->
    <label style for="contactNum">Your Contact number:</label><br />
    <input
      class="table-form"
      type="tel"
      id="contactNum"
      name="contactNum"
      required
    /><br />

    <!-- email input -->
    <label style for="email">Enter your email:</label><br />
    <input
      class="table-form"
      type="email"
      id="email"
      name="email"
      required
    /><br /><br />

    <!-- submit button -->
    <input
      class="booking-button"
      style="padding: 2vw 8vw"
      type="submit"
      value="Submit"
    />
  </form>
</div>
</div>


<%-include("footer") -%>
